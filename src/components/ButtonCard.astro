---
interface Props {
    title: string;
    href: string;
    isExternal?: boolean;
}

const { title, href, isExternal } = Astro.props;

const icons = {
    'Side Projects': `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M6 18h8"/>
        <path d="M3 22h18"/>
        <path d="M14 22a7 7 0 1 0 0-14h-1"/>
        <path d="M9 14h2"/>
    </svg>`,
    'Thoughts': `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
        <polyline points="14 2 14 8 20 8"/>
    </svg>`,
    'Bookshelf': `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
        <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
    </svg>`,
    'Bio': `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
        <circle cx="12" cy="7" r="4"/>
    </svg>`
};
---

<a href={href} class="button-card" {...isExternal ? { target: "_blank", rel: "noopener noreferrer" } : {}}>
    <Fragment set:html={icons[title]} />
    <span>{title}</span>
    {isExternal && (
        <svg class="external-icon" width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3.5 3C3.5 2.72386 3.72386 2.5 4 2.5H8.5C8.77614 2.5 9 2.72386 9 3V7.5C9 7.77614 8.77614 8 8.5 8C8.22386 8 8 7.77614 8 7.5V4.20711L3.35355 8.85355C3.15829 9.04882 2.84171 9.04882 2.64645 8.85355C2.45118 8.65829 2.45118 8.34171 2.64645 8.14645L7.29289 3.5H4C3.72386 3.5 3.5 3.27614 3.5 3Z" fill="currentColor"/>
        </svg>
    )}
</a>

<style>
    .button-card {
        display: flex;
        align-items: center;
        gap: var(--space-md);
        background: var(--color-bg-secondary);
        padding: var(--space-lg);
        border-radius: 12px;
        color: var(--color-text-primary);
        text-decoration: none;
        transition: transform 0.2s ease;
        font-weight: 500;
    }

    .button-card:hover {
        transform: translateY(-2px);
    }

    .external-icon {
        margin-left: auto;
        opacity: 0.6;
        transition: transform 0.2s ease;
    }

    .button-card:hover .external-icon {
        transform: translate(2px, -2px);
        opacity: 1;
    }

    span {
        flex: 1;
    }
</style>