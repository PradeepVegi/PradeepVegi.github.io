---
import Logo from "/src/components/Navigation/Logo.astro";
import NavSection from "/src/components/Navigation/NavSection.astro";
import ThemeToggle from "/src/components/Navigation/ThemeToggle.astro";

const projectItems = [
  { href: "/projects/1", label: "Single Take" },
  { href: "/projects/2", label: "Healome" },
  { href: "/projects/4", label: "AViD" },
  {
    href: "https://example.com/past-work",
    label: "Past Work",
    isExternal: true,
  },
];

const miscItems = [
  {
    href: "/side-projects",
    label: "Side Projects",
  },
  { href: "https://PradeepVegi.github.io/blogs", label: "Blogs" },
  { href: "https://PradeepVegi.github.io/bookshelf", label: "Book Reviews" },
  { href: "https://example.com/bio", label: "Bio", isExternal: true },
];

const socialLinks = [
  { href: "https://twitter.com/yourusername", label: "X", icon: "twitter" },
  {
    href: "https://linkedin.com/in/yourusername",
    label: "LinkedIn",
    icon: "linkedin",
  },
];
---

<nav class="sidebar">
  <div class="nav-content">
    <div class="nav-header">
      <Logo />
      <button class="menu-toggle" aria-label="Toggle menu">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </div>

    <div class="nav-menu">
      <div class="desktop-nav">
        <div class="nav-sections">
          <NavSection title="Selected UX Work" items={projectItems} />
          <div class="nav-spacer"></div>
          <NavSection title="Miscellaneous" items={miscItems} />
        </div>
        <div class="nav-footer">
          <div class="theme-section">
            <span class="theme-label">Theme</span>
            <ThemeToggle />
          </div>
          <div class="social-links">
            {
              socialLinks.map((link) => (
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="social-link"
                  aria-label={link.label}
                >
                  {link.icon === "twitter" && (
                    <svg
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                    >
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                    </svg>
                  )}
                  {link.icon === "linkedin" && (
                    <svg
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                    >
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                    </svg>
                  )}
                </a>
              ))
            }
          </div>
        </div>
      </div>

      <div class="mobile-nav">
        <NavSection title="Miscellaneous" items={miscItems} />
      </div>
    </div>
  </div>
</nav>

<style>
  .sidebar {
    width: 250px;
    background: var(--color-bg-primary);
    height: 100vh;
    position: fixed;
    border-right: 1px solid var(--color-bg-secondary);
    z-index: 1000;
  }

  .nav-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    overflow: hidden;
  }

  .nav-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70px;
    border-bottom: 1px solid var(--color-bg-secondary);
  }

  .desktop-nav {
    display: flex;
    flex-direction: column;
    height: calc(100vh - 70px);
  }

  .nav-sections {
    flex: 1;
    overflow-y: auto;
    padding: var(--space-md);
  }

  .nav-footer {
    padding: var(--space-md);
    border-top: 1px solid var(--color-bg-secondary);
  }

  .nav-spacer {
    height: var(--space-xl);
  }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--color-text-primary);
    cursor: pointer;
    padding: var(--space-sm);
    margin-right: var(--space-sm);
  }

  .theme-section {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .theme-label {
    color: var(--color-text-secondary);
    font-size: var(--text-lg);
    font-weight: var(--font-medium);
  }

  .social-links {
    display: flex;
    gap: var(--space-md);
    justify-content: flex-start;
  }

  .social-link {
    color: var(--color-text-secondary);
    transition: var(--transition-default);
    padding: var(--space-xs);
  }

  .social-link:hover {
    color: var(--color-text-primary);
    transform: translateY(-2px);
  }

  .mobile-nav {
    display: none;
  }

  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      height: 60px;
      position: fixed;
      top: 0;
      z-index: 1000;
      border-right: none;
      border-bottom: 1px solid var(--color-bg-secondary);
    }

    .nav-content {
      overflow: visible;
    }

    .nav-header {
      height: 60px;
      border-bottom: none;
    }

    .menu-toggle {
      display: block;
    }

    .menu-toggle.active {
      color: var(--color-accent);
    }

    .nav-menu {
      display: none;
      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      bottom: 0;
      background: var(--color-bg-primary);
      overflow-y: auto;
    }

    .nav-menu.active {
      display: block;
    }

    .desktop-nav {
      display: none;
    }

    .mobile-nav {
      display: block;
      padding: var(--space-md);
    }
  }
</style>

<script>
  const menuToggle = document.querySelector(".menu-toggle");
  const navMenu = document.querySelector(".nav-menu");
  const body = document.querySelector("body");

  menuToggle?.addEventListener("click", () => {
    navMenu?.classList.toggle("active");
    menuToggle?.classList.toggle("active");
    body?.classList.toggle("menu-open");
  });
</script>
