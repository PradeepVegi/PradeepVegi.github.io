---
import Layout from '../../layouts/Layout.astro';
import { sideProjects } from '../../data/sideProjects';

const isMobile = Astro.request.headers.get('user-agent')?.includes('Mobile') ?? false;
---

<Layout title="Side Projects">
    <div class="side-projects">
        {isMobile ? (
            <div class="mobile-list">
                {sideProjects.map(project => (
                    <a href={`/side-projects/${project.id}`} class="project-link">
                        <h3>{project.title}</h3>
                        <p>{project.description}</p>
                    </a>
                ))}
            </div>
        ) : (
            <p class="instruction">Select a project from the sidebar to view details.</p>
        )}
    </div>
</Layout>

<style>
    .side-projects {
        max-width: 800px;
        margin: 0 auto;
        padding: var(--space-lg);
    }
    .instruction {
        color: var(--color-text-secondary);
        font-size: 1.2rem;
        text-align: center;
        padding-top: 4rem;
    }
    .mobile-list {
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
        padding-top: var(--space-lg);
    }
    .project-link {
        text-decoration: none;
        padding: var(--space-lg);
        background: var(--color-bg-secondary);
        border-radius: var(--radius-md);
        transition: transform 0.2s ease;
    }
    .project-link:hover {
        transform: translateY(-2px);
    }
    .project-link h3 {
        color: var(--color-text-primary);
        margin-bottom: var(--space-sm);
    }
    .project-link p {
        color: var(--color-text-secondary);
        font-size: 0.9rem;
    }
</style>