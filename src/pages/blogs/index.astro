---
import Layout from '../../layouts/Layout.astro';
import { blogContents } from '../../data/blogContent';

const isMobile = Astro.request.headers.get('user-agent')?.includes('Mobile') ?? false;
---

<Layout title="Blog Posts">
    <div class="blogs">
        {isMobile ? (
            <div class="mobile-list">
                {blogContents.map(blog => (
                    <a href={`/blogs/${blog.id}`} class="blog-link">
                        <h3>{blog.title}</h3>
                        <p class="category">{blog.category}</p>
                    </a>
                ))}
            </div>
        ) : (
            <p class="instruction">Select an article from the sidebar to read the full post.</p>
        )}
    </div>
</Layout>

<style>
    .blogs {
        max-width: 800px;
        margin: 0 auto;
        padding: var(--space-lg);
    }
    .instruction {
        color: var(--color-text-secondary);
        font-size: 1.2rem;
        text-align: center;
        padding-top: 4rem;
    }
    .mobile-list {
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
        padding-top: var(--space-lg);
    }
    .blog-link {
        text-decoration: none;
        padding: var(--space-lg);
        background: var(--color-bg-secondary);
        border-radius: var(--radius-md);
        transition: transform 0.2s ease;
    }
    .blog-link:hover {
        transform: translateY(-2px);
    }
    .blog-link h3 {
        color: var(--color-text-primary);
        margin-bottom: var(--space-sm);
    }
    .category {
        color: var(--color-text-secondary);
        font-size: 0.9rem;
        text-transform: uppercase;
    }
</style>