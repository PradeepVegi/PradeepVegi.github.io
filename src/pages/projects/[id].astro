---
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../data/projects";
import {
  project1Sections,
  project2Sections,
  project3Sections,
  project4Sections,
} from "../../data/projectSections";
import ProjectSection from "../../components/ProjectSection.astro";
import "../../styles/typography.css";

export function getStaticPaths() {
  return projects.map((project) => ({
    params: { id: project.id },
  }));
}

const { id } = Astro.params;
const project = projects.find((p) => p.id === id);

// Create the sections mapping
const projectSections = {
  "1": project1Sections,
  "2": project2Sections,
  "3": project3Sections,
  "4": project4Sections,
};

// Ensure the id exists and is a valid key
const validIds = ["1", "2", "3", "4"];
const sections = validIds.includes(id) ? projectSections[id] : [];

if (!project || !sections) {
  return Astro.redirect("/404");
}
---

<Layout title={project.title}>
  <div class="project">
    <h1 class="project-title">{project.title}</h1>
    <p class="project-description">{project.fullDescription}</p>

    <div class="sections">
      {
        sections && sections.length > 0 ? (
          sections.map((section) => <ProjectSection {...section} />)
        ) : (
          <p class="no-sections">No sections available for this project.</p>
        )
      }
    </div>
  </div>
</Layout>

<style>
  .project {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-xl) var(--space-lg);
  }

  .project-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
    letter-spacing: -0.02em;
  }

  .project-description {
    font-size: var(--text-xl);
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
  }

  .sections {
    margin-top: var(--space-xl);
  }

  .no-sections {
    text-align: center;
    color: var(--color-text-secondary);
    padding: var(--space-xl) 0;
  }

  @media (max-width: 768px) {
    .project {
      padding: var(--space-xl) var(--space-md);
    }

    .project-title {
      font-size: var(--text-2xl);
      margin-bottom: var(--space-sm);
    }

    .project-description {
      font-size: var(--text-lg);
      margin-bottom: var(--space-lg);
    }

    .sections {
      margin-top: var(--space-lg);
    }
  }
</style>
